{% extends "base.html.twig" %}

{% block title %}Валютный обменник{% endblock %}

{% block content %}
  <div id="current-rates-data" data-current-rates-data="{{ currentRatesData|json_encode }}"></div>
  <form action="" id="change-form">
    <input type="hidden" name="changeResult" id="change-result-input">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 left-content">
        
          <div class="container-fluid">
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <select class="form-select" name="operation" id="operation">
                  <option value="sell">Продать</option>
                  <option value="buy">Купить</option>
                </select>
              </div>
            </div>
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <select class="form-select" name="currency" id="currency">
                  {% for item in currentRatesData %}
                    <option value="{{ item.currencyId }}">{{ item.currencyName }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <div class="input-group">
                  <input type="text" class="form-control" id="change-value-input" aria-describedby="change-value-iso" placeholder="Количество">
                  <span class="input-group-text" id="change-value-iso"></span>
                  <div class="invalid-feedback" id="change-value-input-error"></div>
                </div>
              </div>
            </div>  
            <div class="row justify-content-center">
              <div class="col-8">
                <p class="text-center">
                  <span class="fs-5" id="change-result"></span>
                </p>
              </div>
            </div>
          </div>

        </div>

        <div class="col-6 right-content">

          <div class="container-fluid">
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Имя" id="order-name-input" name="name">
                  <div class="invalid-feedback" id="order-name-error"></div>
                </div>
              </div>
            </div>
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <div class="input-group">
                  <input type="text" class="form-control"  placeholder="Телефон" id="order-phone-number-input" name="phoneNumber">
                  <div class="invalid-feedback" id="order-phone-number-error"></div>
                </div>
              </div>
            </div>
            <div class="row mb-4 justify-content-center">
              <div class="col-8">
                <div class="input-group">
                  <input type="text" class="form-control"  placeholder="E-mail" id="order-email-input" name="email">
                  <div class="invalid-feedback" id="order-email-error"></div>
                </div>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="col-8">
                <button type="submit" class="btn btn-outline-secondary" id="order-submit" disabled>Оформить заявку</button>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </form>
{% endblock %}

{% block scripts %}
  <script src="/assets/js/currencyChange/change.js"></script>
{% endblock %}